<%- model_class = Log -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_log_path,
            :class => 'btn btn-primary' %>
<div style="height:20px">&nbsp;</div>
<table class="table table-striped" style="height:30px">
  <thead>
    <tr>
      <th>TOTALE</th>
      <td colspan=6 style="font-weight:bold"><%= @totale %></td>
    </tr>
  </thead>
</table>
<table class="table table-striped">
  <thead>
    <tr>
      <!-- <th><%= model_class.human_attribute_name(:id) %></th> -->
      <th></th>
      <th><%= model_class.human_attribute_name(:valore) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
      <!-- <th><%= model_class.human_attribute_name(:created_at) %></th> -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <!-- <td><%= link_to log.id, log_path(log) %></td> -->
        <td></td>
        <td><%= log.category.tipo ? log.valore : - log.valore %></td>
        <td><%= log.note %></td>
        <td><%= log.category.nome %></td>
        <!-- <td><%=l log.created_at %></td> -->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_log_path(log), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      log_path(log),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
